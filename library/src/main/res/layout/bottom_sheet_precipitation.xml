<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/llPrecipitation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible"
        tools:visibility="visible">
        <View
            android:layout_width="38dp"
            android:layout_height="5dp"
            android:background="@drawable/bg_sheet_decoration"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tvMunicipalityNamePrec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            tools:text="Oviedo"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:enabled="false"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/tvProvinceNamePrec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            tools:text="Asturias"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:enabled="false"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tvCurrentTemperaturePrec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            tools:text="14Â°"
            android:textSize="44sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:enabled="false"
            android:layout_marginBottom="6dp"/>

        <ImageView
            android:id="@+id/ivCurrentWeatherPrec"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_clear"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round_border"
            android:backgroundTint="@color/lightGray"
            android:orientation="horizontal"
            android:layout_marginEnd="20dp"
            android:padding="20dp"
            android:gravity="bottom|center_horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="30dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="25dp">
                <TextView
                    android:id="@+id/tvAtSixPrecipitationPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="56%"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp"/>
                <LinearLayout
                    android:id="@+id/llAtSixPrecipitation"
                    android:layout_width="16dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_round_border"
                    android:layout_marginBottom="6dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06:00"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="25dp">
                <TextView
                    android:id="@+id/tvAtTwelvePrecipitationPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="56%"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp"/>
                <LinearLayout
                    android:id="@+id/llAtTwelvePrecipitation"
                    android:layout_width="16dp"
                    android:layout_height="10dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_round_border"
                    android:layout_marginBottom="6dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:00"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="25dp">
                <TextView
                    android:id="@+id/tvAtEighteenPrecipitationPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="56%"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp"/>
                <LinearLayout
                    android:id="@+id/llAtEighteenPrecipitation"
                    android:layout_width="16dp"
                    android:layout_height="90dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_round_border"
                    android:layout_marginBottom="6dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18:00"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/tvAtTwentyFourPrecipitationPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="56%"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp"/>
                <LinearLayout
                    android:id="@+id/llAtTwentyFourPrecipitation"
                    android:layout_width="16dp"
                    android:layout_height="40dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_round_border"
                    android:layout_marginBottom="6dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24:00"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/pbPrecipitation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="visible"
        tools:visibility="gone"/>

</RelativeLayout>