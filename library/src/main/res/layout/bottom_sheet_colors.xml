<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <View
        android:layout_width="38dp"
        android:layout_height="5dp"
        android:background="@drawable/bg_sheet_decoration"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar color"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:enabled="false"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:id="@+id/llColors"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp">
        <LinearLayout
            android:id="@+id/llColorRed"
            android:orientation="vertical"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#ff0000"
            android:background="@drawable/bg_round_border"/>
        <LinearLayout
            android:id="@+id/llColorYellow"
            android:orientation="vertical"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#ffc800"
            android:background="@drawable/bg_round_border"/>
        <LinearLayout
            android:id="@+id/llColorBlue"
            android:orientation="vertical"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#2d37f3"
            android:background="@drawable/bg_round_border"/>
        <LinearLayout
            android:id="@+id/llColorSkyblue"
            android:orientation="vertical"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#2dacf3"
            android:background="@drawable/bg_round_border"/>
        <LinearLayout
            android:id="@+id/llColorGreen"
            android:orientation="vertical"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#48a644"
            android:background="@drawable/bg_round_border"/>
        <LinearLayout
            android:id="@+id/llColorBrown"
            android:orientation="vertical"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#a16d60"
            android:background="@drawable/bg_round_border"/>
    </LinearLayout>

</LinearLayout>