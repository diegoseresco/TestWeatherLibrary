<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <View
        android:layout_width="38dp"
        android:layout_height="5dp"
        android:background="@drawable/bg_sheet_decoration"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"/>

   <TextView
       android:id="@+id/tvName"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Building 41"
       android:textSize="16dp"
       android:textColor="@color/black"
       android:layout_gravity="center"
       android:enabled="false"
       android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/ivPaint"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_paint"
                android:background="?android:attr/selectableItemBackgroundBorderless"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/ivEdit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_pencil"
                android:background="?android:attr/selectableItemBackgroundBorderless"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/ivTransparency"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_transparency"
                android:background="?android:attr/selectableItemBackgroundBorderless"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llColors"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginBottom="20dp">
        <LinearLayout
            android:id="@+id/llRed"
            android:orientation="vertical"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#ff0000"
            android:background="@drawable/bg_round_border"/>
        <LinearLayout
            android:id="@+id/llYellow"
            android:orientation="vertical"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#ffc800"
            android:background="@drawable/bg_round_border"/>
        <LinearLayout
            android:id="@+id/llBlue"
            android:orientation="vertical"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#2d37f3"
            android:background="@drawable/bg_round_border"/>
        <LinearLayout
            android:id="@+id/llSkyblue"
            android:orientation="vertical"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#2dacf3"
            android:background="@drawable/bg_round_border"/>
        <LinearLayout
            android:id="@+id/llGreen"
            android:orientation="vertical"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#48a644"
            android:background="@drawable/bg_round_border"/>
        <LinearLayout
            android:id="@+id/llBrown"
            android:orientation="vertical"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#a16d60"
            android:background="@drawable/bg_round_border"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlUpdateName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:visibility="gone">
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_toLeftOf="@id/bUpdate"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:hint="Nombre a actualizar"/>
        <Button
            android:id="@+id/bUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_recommended"
            android:text="Actualizar"
            android:textAllCaps="false"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llTransparency"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginBottom="20dp"
        android:visibility="gone">
        <SeekBar
            android:id="@+id/sbTransparency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/powerTextView"
            android:progressTint="@color/main"
            android:thumbTint="@color/main"
            android:layout_gravity="center"
            android:progress="100"
            android:tickMarkTint="@color/main" />
    </LinearLayout>
</LinearLayout>