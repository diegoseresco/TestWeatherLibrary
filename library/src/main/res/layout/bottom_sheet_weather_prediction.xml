<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/llWeather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible"
        tools:visibility="visible">
        <View
            android:layout_width="38dp"
            android:layout_height="5dp"
            android:background="@drawable/bg_sheet_decoration"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tvMunicipalityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            tools:text="Oviedo"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:enabled="false"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/tvProvinceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            tools:text="Asturias"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:enabled="false"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tvCurrentTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            tools:text="14Â°"
            android:textSize="44sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:enabled="false"
            android:layout_marginBottom="6dp"/>

        <ImageView
            android:id="@+id/ivCurrentWeather"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_clear"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round_border"
            android:backgroundTint="@color/lightGray"
            android:orientation="horizontal"
            android:layout_marginEnd="20dp"
            android:padding="20dp"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="30dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="25dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="6dp"/>
                <ImageView
                    android:id="@+id/ivAtSixWeather"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    tools:src="@drawable/ic_clear"
                    android:layout_gravity="center"
                    android:layout_marginBottom="6dp"/>
                <TextView
                    android:id="@+id/tvAtSixTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="14"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="25dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="6dp"/>
                <ImageView
                    android:id="@+id/ivAtTwelveWeather"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    tools:src="@drawable/ic_high_cloudy"
                    android:layout_gravity="center"
                    android:layout_marginBottom="6dp"/>
                <TextView
                    android:id="@+id/tvAtTwelveTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="14"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="25dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="6dp"/>
                <ImageView
                    android:id="@+id/ivAtEighteenWeather"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    tools:src="@drawable/ic_clear"
                    android:layout_gravity="center"
                    android:layout_marginBottom="6dp"/>
                <TextView
                    android:id="@+id/tvAtEighteenTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="14"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="6dp"/>
                <ImageView
                    android:id="@+id/ivAtTwentyFourWeather"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    tools:src="@drawable/ic_clear"
                    android:layout_gravity="center"
                    android:layout_marginBottom="6dp"/>
                <TextView
                    android:id="@+id/tvAtTwentyFourTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="14"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/pbWeatherPrediction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="visible"
        tools:visibility="gone"/>

</RelativeLayout>