<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_round_border">
    <View
        android:layout_width="38dp"
        android:layout_height="5dp"
        android:background="@drawable/bg_sheet_decoration"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/ivNormal"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_normal"
                android:background="?android:attr/selectableItemBackgroundBorderless"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/ivTerrain"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_terrain"
                android:background="?android:attr/selectableItemBackgroundBorderless"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/ivHybrid"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_hybrid"
                android:background="?android:attr/selectableItemBackgroundBorderless"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/ivSatellite"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_satellite"
                android:background="?android:attr/selectableItemBackgroundBorderless"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>