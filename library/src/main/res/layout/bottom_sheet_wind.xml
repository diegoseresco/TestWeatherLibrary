<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/ll_wind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible"
        tools:visibility="visible"
        android:gravity="center">

        <View
            android:layout_width="38dp"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_sheet_decoration"
            android:gravity="center" />

        <RadioGroup
            android:id="@+id/rg_wind"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="14dp"
            android:checkedButton="@+id/rb_wind_at_six"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_wind_at_six"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="00 - 06"
                android:background="@drawable/rb_segmented_left"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@drawable/rb_text" />

            <RadioButton
                android:id="@+id/rb_wind_at_twelve"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="06 - 12"
                android:background="@drawable/rb_segmented_center"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@drawable/rb_text" />

            <RadioButton
                android:id="@+id/rb_wind_at_eighteen"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="12 - 18"
                android:background="@drawable/rb_segmented_center"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@drawable/rb_text" />

            <RadioButton
                android:id="@+id/rb_wind_at_twentyfour"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="18 - 24"
                android:background="@drawable/rb_segmented_center"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@drawable/rb_text" />

        </RadioGroup>

        <TextView
            android:id="@+id/tv_wind_municipality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="6dp"
            android:enabled="false"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Oviedo" />

        <TextView
            android:id="@+id/tv_wind_province"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:enabled="false"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:text="Asturias" />

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/bg_circle">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="60dp"
                    android:background="@drawable/ic_arrow"
                    android:rotation="90"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/iv_arrow_n"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="30dp"
                    android:rotation="270"
                    android:src="@drawable/ic_arrow" />

                <ImageView
                    android:id="@+id/iv_arrow_e"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="0dp"
                    android:rotation="0"
                    android:src="@drawable/ic_arrow" />

                <ImageView
                    android:id="@+id/iv_arrow_s"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30dp"
                    android:rotation="90"
                    android:src="@drawable/ic_arrow" />

                <ImageView
                    android:id="@+id/iv_arrow_o"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="0dp"
                    android:rotation="180"
                    android:src="@drawable/ic_arrow" />

                <ImageView
                    android:id="@+id/iv_arrow_so"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="50dp"
                    android:rotation="135"
                    android:src="@drawable/ic_arrow" />

                <ImageView
                    android:id="@+id/iv_arrow_no"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="50dp"
                    android:rotation="225"
                    android:src="@drawable/ic_arrow" />

                <ImageView
                    android:id="@+id/iv_arrow_ne"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="20dp"
                    android:rotation="315"
                    android:src="@drawable/ic_arrow" />

                <ImageView
                    android:id="@+id/iv_arrow_se"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="50dp"
                    android:rotation="45"
                    android:src="@drawable/ic_arrow" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="4dp">

                    <TextView
                        android:id="@+id/tv_wind_km"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textColor="@color/black"
                        android:textSize="26dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="km/h"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@color/white"
                android:text=" N "
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" E "
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:background="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" S "
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:background="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" O "
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="4dp"
                android:background="@color/white"/>

        </RelativeLayout>

    </LinearLayout>
    <ProgressBar
        android:id="@+id/pb_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="visible"
        tools:visibility="gone"/>

</RelativeLayout>