<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/llWeatherWeekly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible"
        tools:visibility="visible">

        <View
            android:layout_width="38dp"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_sheet_decoration"
            android:gravity="center" />

        <RadioGroup
            android:id="@+id/rgWeek"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="14dp"
            android:checkedButton="@+id/rbDayOne"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbDayOne"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/rb_segmented_left"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@drawable/rb_text" />

            <RadioButton
                android:id="@+id/rbDayTwo"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/rb_segmented_center"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@drawable/rb_text" />

            <RadioButton
                android:id="@+id/rbDayThree"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/rb_segmented_center"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@drawable/rb_text" />

            <RadioButton
                android:id="@+id/rbDayFour"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/rb_segmented_center"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@drawable/rb_text" />

            <RadioButton
                android:id="@+id/rbDayFive"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/rb_segmented_center"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@drawable/rb_text" />

            <RadioButton
                android:id="@+id/rbDaySix"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/rb_segmented_center"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@drawable/rb_text" />

            <RadioButton
                android:id="@+id/rbDaySeven"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/rb_segmented_right"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@drawable/rb_text" />
        </RadioGroup>

        <TextView
            android:id="@+id/tvMunicipalityNameWeekly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="6dp"
            android:enabled="false"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Oviedo" />

        <TextView
            android:id="@+id/tvProvinceNameWeekly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:enabled="false"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:text="Asturias" />

        <TextView
            android:id="@+id/tvCurrentTemperatureWeekly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="6dp"
            android:enabled="false"
            android:text=""
            android:textColor="@color/black"
            android:textSize="44sp"
            android:textStyle="bold"
            tools:text="14°" />

        <ImageView
            android:id="@+id/ivCurrentWeatherWeekly"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:src="@drawable/ic_clear" />

        <LinearLayout
            android:id="@+id/llWeatherFullInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/bg_round_border"
            android:backgroundTint="@color/lightGray"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="06"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/ivAtSixWeatherWeekly"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="6dp"
                    tools:src="@drawable/ic_clear" />

                <TextView
                    android:id="@+id/tvAtSixTemperatureWeekly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    tools:text="14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="12"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/ivAtTwelveWeatherWeekly"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="6dp"
                    tools:src="@drawable/ic_high_cloudy" />

                <TextView
                    android:id="@+id/tvAtTwelveTemperatureWeekly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    tools:text="14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="18"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/ivAtEighteenWeatherWeekly"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="6dp"
                    tools:src="@drawable/ic_clear" />

                <TextView
                    android:id="@+id/tvAtEighteenTemperatureWeekly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    tools:text="14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="24"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/ivAtTwentyFourWeatherWeekly"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="6dp"
                    tools:src="@drawable/ic_clear" />

                <TextView
                    android:id="@+id/tvAtTwentyFourTemperatureWeekly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    tools:text="14" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llWeatherInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/bg_round_border"
            android:backgroundTint="@color/lightGray"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:id="@+id/llMidInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="25dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTemperatureMiddaySchedule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="00-12"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/ivAtMiddayWeatherWeekly"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="6dp"
                        tools:src="@drawable/ic_clear" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="12-24"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/ivAtMidnightWeatherWeekly"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="6dp"
                        tools:src="@drawable/ic_clear" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvMaxTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Máxima temperatura:*"/>
                <TextView
                    android:id="@+id/tvMinTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mínima temperatura:*"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/pbWeeklyWeatherPrediction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="visible"
        tools:visibility="gone"/>

</RelativeLayout>